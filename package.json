{
    "name": "fk-template",
    "version": "1.0.0",
    "description": "Workpieces code and structure that I use in every project",
    "main": "gulpfile.babel.js",
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "@babel/register": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "browser-sync": "^2.26.3",
        "eslint": "^5.9.0",
        "gulp": "^4.0.0",
        "gulp-autoprefixer": "^6.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-clean-css": "^3.10.0",
        "gulp-plumber": "^1.2.0",
        "gulp-rename": "^1.4.0",
        "gulp-sass": "^4.0.2",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-svgmin": "^2.1.0",
        "gulp-svgstore": "^7.0.0",
        "gulp-uglify": "^3.0.1",
        "gulp-zip": "^4.2.0",
        "husky": "^1.1.4"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "scripts": {
        "start": "yarn install --modules-folder ./../node_modules",
        "sass": "node ./node_modules/gulp/bin/gulp.js sass",
        "sass:watch": "node ./node_modules/gulp/bin/gulp.js watch",
        "babel": "node ./node_modules/gulp/bin/gulp.js babel",
        "lint": "./node_modules/.bin/eslint assets/js/es6/**/*.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kudinovfedor/fk-template.git"
    },
    "keywords": [
        "HTML5",
        "CSS3",
        "Sass(Scss)",
        "SMACSS",
        "Node",
        "npm",
        "yarn",
        "Gulp"
    ],
    "author": "Kudinov Fedor",
